<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:fragment="com.firebirdberlin.nightdream.PreferencesFragment"
    app:icon="@drawable/ic_hue_bridge"
    app:key="hue"
    app:title="@string/help">

    <SwitchPreferenceCompat
        app:iconSpaceReserved="false"
        app:defaultValue="false"
        app:key="switchHue"
        app:summary=""
        app:title="Hue Bridge" />

    <com.firebirdberlin.nightdream.ui.HueConnectPreference
        app:iconSpaceReserved="false"
        app:enabled="false"
        android:key="connectHue"
        android:title="Connect to Hue"
        android:summary="not connected"
        />

</PreferenceScreen>